<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="15dp">

    <ImageView
        android:id="@+id/icon_app"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_live_tv_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/title_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Từ thiết bị TV android 1608:"
        app:layout_constraintEnd_toStartOf="@id/checked"
        app:layout_constraintStart_toEndOf="@id/icon_app"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_used_app"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Từ thiết bị TV android 1608:"
        app:layout_constraintEnd_toStartOf="@id/checked"
        app:layout_constraintStart_toEndOf="@id/icon_app"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/checked"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/ic_icon_tick"
        app:layout_constraintBottom_toBottomOf="@id/img_cancel"
        app:layout_constraintEnd_toStartOf="@+id/img_cancel"
        app:layout_constraintTop_toTopOf="@id/img_cancel" />

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="4dp"
        android:src="@drawable/ic_icon_cancel"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:visibility="gone"
        android:id="@+id/block"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>