<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/title_home"
        android:text="Danh sách chờ duyệt"
        android:layout_marginTop="40dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view1"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/title_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/linear_content_1"
            android:id="@+id/icon1"
            android:layout_width="50dp"
            android:src="@drawable/ic_icon_instagram"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@+id/icon1"
            app:layout_constraintRight_toLeftOf="@+id/layout_tick1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linear_content_1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Từ thiết bị TV android 1608:"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:text="thêm 00:30:00"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@+id/linear_content_1"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/layout_tick1"
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_icon_tick"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView
                android:src="@drawable/ic_icon_cancel"
                android:padding="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/view2"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/linear_content_2"
            android:id="@+id/icon2"
            android:layout_width="50dp"
            android:src="@drawable/ic_icon_viber"
            android:layout_height="50dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@+id/icon2"
            app:layout_constraintRight_toLeftOf="@+id/layout_tick2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linear_content_2"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:text="Từ thiết bị TV android 1608:"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <TextView
                android:text="thêm 00:30:00"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

        </LinearLayout>

        <LinearLayout
            app:layout_constraintLeft_toRightOf="@+id/linear_content_2"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/layout_tick2"
            android:orientation="horizontal"
            android:layout_width="80dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_icon_tick"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <ImageView
                android:src="@drawable/ic_icon_cancel"
                android:padding="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>